{
	// Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Confluence Code Block" : {
		"prefix" : "conf_code",
		"body": [
			"{code:title=${1}|theme=Emacs|linenumbers=false}",
			"${2}",
			"{code}",
			"${0}"
		],
		"description" : "Add a Code block in Confluence Markup"
	},

	"Confluence Bulleted List" :{
		"prefix" : "conf_bulletedlist",
		"body" : [
			"* ${1}",
			"* ${2}",
			"** ${3}",
			"** {$4}",
			"* ${5}",
			"${0}"
		],
		"description": "Add a Bulletted list in Confluence Markup"
	},

	"Confluence Numbered List" :{
		"prefix" : "conf_Numberedlist",
		"body" : [
			"# ${1}",
			"## ${2}",
			"# ${3}",
			"## {$4}",
			"### ${5}",
			"${0}"
		],
		"description": "Add a Bulletted list in Confluence Markup"
	},

	"Confluence Mixed List" :{
		"prefix" : "conf_Numberedlist",
		"body" : [
			"# ${1}",
			"#* ${2}",
			"# ${3}",
			"#* {$4}",
			"#* ${5}",
			"${0}"
		],
		"description": "Add a Bulletted list in Confluence Markup"
	},

	"Confluence Table With Head Row" :{
		"prefix" : "conf_TableHeadRow",
		"body" : [
			"||${1}||${2}||${3}||",
			"|cell A1|cell A2|cell A3|",
			"|cell B1|cell B2|cell B3|",
			"${0}"
		],
		"description": "Add a Bulletted list in Confluence Markup"
	},

	"Confluence Table With Head Column" :{
		"prefix" : "conf_TableHeadCol",
		"body" : [
			"||${1}|col A1|col A2|col A3|",
			"||${2}|col B1|col B2|col B3|",
			"${0}"
		],
		"description": "Add a Bulletted list in Confluence Markup"
	}

}